  </div>

  <div>
    <%#= f.label :deadline_at, 'Deadline_at:' %>
    <%#= f.date_select :deadline_at, order: [:year, :month, :day] %>
  </div>
  -->

  <div>
    <%= f.label :description, 'Description:' %>
    <%= f.text_area :description %>
  </div>

  <div id="form-action">
    <%= f.submit 'Create' %>
  </div>

<% end %>